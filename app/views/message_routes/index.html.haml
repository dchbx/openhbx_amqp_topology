%h4 Message Routes

%table.table.table-sm
  %thead
    %tr
      %th From exchange
      %th To exchange
      %th
      %th
      %th

  %tbody
    - @message_routes.each do |message_route|
      %tr
        %td= message_route.from_exchange.display_name
        %td= message_route.to_exchange.display_name
        %td= link_to 'Show', message_route, { :class => "btn btn-primary"}
        %td= link_to 'Edit', edit_message_route_path(message_route), { :class => "btn btn-secondary" }
        %td= link_to 'Destroy', message_route, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-secondary"

%br

= link_to 'New Message route', new_message_route_path

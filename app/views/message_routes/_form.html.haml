= form_for @message_route do |f|
  - if @message_route.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message_route.errors.count, "error")} prohibited this message_route from being saved:"
      %ul
        - @message_route.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from_exchange_id
    = f.select :from_exchange_id, Exchange.all.map { |ex| [ex.display_name, ex.id ]}
  .field
    = f.label :to_exchange_id
    = f.select :to_exchange_id, Exchange.all.map { |ex| [ex.display_name, ex.id ]}
  .actions
    = f.submit 'Save'
